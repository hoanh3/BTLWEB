<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>btlweb</display-name>
  <welcome-file-list>
  	<welcome-file>view/client/index.jsp</welcome-file>
  </welcome-file-list>

  
  <!--API begin-->
  <servlet>
  	<servlet-name>Category API Servlet</servlet-name>
  	<servlet-class>btlweb.mvc.controller.api.CategoryApi</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Category API Servlet</servlet-name>
  	<url-pattern>/category/*</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>Galery API Servlet</servlet-name>
  	<servlet-class>btlweb.mvc.controller.api.GaleryApi</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Galery API Servlet</servlet-name>
  	<url-pattern>/galery/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>User API Servlet</servlet-name>
  	<servlet-class>btlweb.mvc.controller.api.UserApi</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>User API Servlet</servlet-name>
  	<url-pattern>/user/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Product API Servlet</servlet-name>
  	<servlet-class>btlweb.mvc.controller.api.ProductApi</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Product API Servlet</servlet-name>
  	<url-pattern>/product/*</url-pattern>
  </servlet-mapping>
  <!--API end-->
  
  <!--Admin Begin-->
  <!--Admin End-->
  
  <!--Client begin-->
  <servlet>
  	<servlet-name>Home Servlet</servlet-name>
  	<servlet-class>btlweb.mvc.controller.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Home Servlet</servlet-name>
  	<url-pattern>/home/*</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Login Servlet</servlet-name>
  	<servlet-class>btlweb.mvc.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Login Servlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Register Servlet</servlet-name>
  	<servlet-class>btlweb.mvc.controller.RegisterController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Register Servlet</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  <!--Client End-->
</web-app>